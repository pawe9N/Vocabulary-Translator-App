<Page
    x:Class="Vocabulary_Translator_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Vocabulary_Translator_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Name="AppTItle" Text="Vocabulary Translator App" FontSize="48"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <TextBox Name="ToTranslateText" Width="200" Text="" />
                <TextBlock Name="TranslatedText" Width="200" Text="" HorizontalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
            <Button Name="Translate" Content="Translate" Click="Translate_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
